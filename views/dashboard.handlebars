<body>
  {{> nav-bar}}
  <main>
    <div class="container mt-4 mb-4">
      <div class="row d-flex justify-content-between">
        <div class="col-3 text-center rounded-4 p-3">
          <div class="d-flex justify-content-center">
            <img src="https://cdn-icons-png.flaticon.com/512/219/219983.png" class="w-50 shadow img-fluid bg-light rounded-circle mb-3" alt="">
          </div>
          <h5>Welcome, {{user.firstname}} {{user.lastname}}</h5>
          <h6><u>Your information</u></h6>
          <br>
          <p>Username: {{user.username}}</p>
          <p>Email: {{user.email}}</p>
          <p>Saved Dishes: {{foodLength}}</p>

        </div>
        <div class="col-9 rounded-4 ps-4">
          <div class="row d-flex justify-content-center">
            {{#each myFoods as |myFood|}}
              {{> food-cards}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </main>
</body>