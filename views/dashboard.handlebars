<body class="bg-info">
  {{> nav-bar}}
  <main>
    <div class="container mt-4 mb-4">
      <div class="row d-flex justify-content-center">
        <div class="col-12 text-center">
          <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col col-xl-10">
                <div class="card mb-4 rounded-4 shadow" style="border-radius: 15px;">
                  <div class="card-body p-4">
                    <h3 class="mb-3">Welcome, {{user.firstname}} {{user.lastname}}</h3>
                    <div class="d-flex justify-content-center align-items-center">
                      <a href="#!">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Sample_User_Icon.png" alt="avatar"
                          class="img-fluid rounded-circle me-3" width="35">
                      </a>
                      <p class="small mb-0"><span class="mx-2">|</span> You have
                        <strong>{{foodLength}}</strong> saved dishes</p>
                    </div>
                    <hr class="my-4">
                    <div class="d-flex justify-content-start align-items-center">
                      <p class="mb-0 text-uppercase"><i class="fas fa-cog me-2"></i> <span
                          class="text-muted small">settings</span>
                          <span class="ms-3 me-3">|</span></p>
                      <p class="mb-0"><i class="fa fa-user ms-4 me-2"></i> <span
                          class="text-muted small">{{user.username}}</span></p>
                      <p class="mb-0"><i class="fa fa-envelope ms-4 me-2"></i> <span
                          class="text-muted small">{{user.email}}</span></p>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>  
          {{!-- <div class="d-flex justify-content-center">
            <img src="https://cdn-icons-png.flaticon.com/512/219/219983.png" class="w-50 shadow img-fluid bg-light rounded-circle mb-3" alt="">
          </div>
          <h5>Welcome, {{user.firstname}} {{user.lastname}}</h5>
          <br>
          <h6><u>Your information</u></h6>
          <br>
          <p>Username: {{user.username}}</p>
          <p>Email: {{user.email}}</p>
          <p>Saved Dishes: {{foodLength}}</p> --}}
        </div>
        <div class="col-12 ps-5">
          <div class="container rounded-4 text-center">
            <div class="row row-cols-1 row-cols-md-3 g-4">
            {{#each myFoods as |myFood|}}
              {{> food-cards}}
            {{/each}}
           </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>