<div class="col">
  <div class="card shadow border-0 h-100">
    <img
      src="/images/food_guide_db/food/{{food_image}}"
      class="card-img-top"
      alt="{{food_image}}"
    />
    <div class="card-body">
      <h5 class="card-title">{{name}}</h5>
      <p class="card-text">
        {{description}}
      </p>
    </div>
    <div class="card-footer p-3">
      <button
        type="button"
        class="btn btn-outline-warning me-3 btn-sm"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal{{id}}"
      >
        View
        {{name}}
        recipe</button>
      <a href="" class="btn btn-outline-danger btn-sm"><i
          class="far fa-heart"
        ></i></a>
      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModal{{id}}"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">{{name}} Recipe</h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              {{recipe.video_link}}
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>