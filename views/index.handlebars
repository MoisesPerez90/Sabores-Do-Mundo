<body class="bg-light">
  {{> nav-bar}}
  <main>
    <div class="container bg-warning shadow rounded-4 text-center mt-4 mb-4">
      <div class="row row align-items-center">
        <div class="col m-2">
          <p class="fs-1 lh-lg fw-bold">
            From <span style="color:green">Mexico</span> to <span style="color:#CD0404">Denmark</span>, take a look to the most delicious and popular
            dishes across the world.
          </p>
          <a href="/countries" class="btn btn-outline-primary">Get Started</a>
        </div>
        <div class="col m-2">
          <img
            src="/images/website_images/deliciousFood.png"
            class="img-fluid"
            alt="Sabores Do Mundo index image"
          />
        </div>
      </div>
    </div>
    <div class="container rounded-4 shadow border-2 text-center bg-primary p-5 mt-3">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#if loggedIn}}
          {{#each foodList as |food|}}
            {{> food-cards}}
          {{/each}}
        {{else}}
          {{#each foodList as |food|}}
            {{> not-auth-fc}}
          {{/each}}
        {{/if}}
      </div>
    </div>
    <div class="container">
      <div class="row d-flex justify-content-between mb-5">
        {{#each users as |user|}}
         {{> super-users}}
        {{/each}}
      </div>
    </div>
  </main>
</body>