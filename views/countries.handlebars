<body class="bg-warning">
  {{> nav-bar}}
  <main>
    <div class="container mt-4">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each countries as |country|}}
        <div class="col">
          <div class="card border-0 m-2 shadow mb-5 bg-body-tertiary rounded-3" style="height: auto;">
            <img src="/images/food_guide_db/countriesbg/{{background_image}}" class="card-img-top bg-success" alt="{{name}}" />
            <div class="card-body border-top rounded-3">
              <img src="/images/food_guide_db/countriesfront/{{front_image}}" alt="" class="front-dish shadow rounded-circle">
              <div class="d-flex justify-content-between mt-5">
                <h5 class="card-title mt-5">{{nationalities name}} Food</h5>
                <img src="/images/food_guide_db/flags/{{flag_image}}" class="img-fluid rounded float-end flag mt-5 m-0 p-0"  alt="{{name}} Flag">
              </div>
              <p class="card-text text-secondary m-3">{{description}}</p>
            </div>
            <a href="/countries/{{id}}" class="btn btn-outline-warning m-3 text-dark">Check {{name}} food</a>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </main>

</body>